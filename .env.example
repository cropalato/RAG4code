# Copie para .env e ajuste conforme necessário

# === CONFIGURAÇÃO OLLAMA ===
OLLAMA_HOST=http://host.docker.internal:11434
EMBEDDING_MODEL=nomic-embed-text
CHAT_MODEL=qwen2.5-coder
OLLAMA_RETRY_COUNT=5
OLLAMA_RETRY_DELAY=10
WAIT_FOR_OLLAMA=true

# === CONFIGURAÇÃO RAG ===
COLLECTION_NAME=code_project
CHUNK_SIZE=1500
MAX_CONTEXT_CHUNKS=5
TEMPERATURE=0.1
TOP_P=0.9
REQUEST_TIMEOUT=120

# === FILTROS DE ARQUIVOS ===
FILE_PATTERNS=*.py,*.js,*.ts,*.jsx,*.tsx,*.vue,*.java,*.cpp,*.c,*.h,*.hpp,*.cs,*.php,*.rb,*.go,*.rs,*.kt,*.swift,*.sql,*.json,*.yaml,*.yml,*.toml,*.md,*.txt,*.dockerfile,Dockerfile,requirements.txt,package.json,pom.xml,*.sh,*.bash,*.zsh
IGNORE_PATTERNS=node_modules,.git,__pycache__,.venv,venv,build,dist,.pytest_cache,.mypy_cache,.next,.nuxt,target,bin,obj,.gradle,vendor,composer.lock,package-lock.json,yarn.lock

# === API WEB ===
API_PORT=8080
FLASK_DEBUG=false
